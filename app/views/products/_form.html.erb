  <%= render "layouts/errors", :object => @product %>

<div class="container" class="form-fields">
  <%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :cost %>
  <%= f.number_field :cost, in: 1..50, step: 1 %>
  <br>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <br>
  <%= f.submit  %>
  <% end %>
</div>
